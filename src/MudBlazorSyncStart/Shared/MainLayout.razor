@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />

        @*<MudSwitch @bind-Toggled="@_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Light/Dark"/>*@

        <MudToggleIconButton @bind-Toggled="@_isDarkMode"
                             Icon="@Icons.Filled.BrightnessHigh" Color="@Color.Secondary" Title="Light mode"
                             ToggledIcon="@Icons.Filled.BrightnessLow" ToggledColor="@Color.Secondary" ToggledTitle="Dark mode" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Color="Color.Dark">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">MudBlazorSyncStart</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private MudTheme _theme = new();
    public bool _isDarkMode { get; set; }

    private MudTheme Theme = new MudTheme();

    //public bool AlarmOn { get; set; }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;


    }
}