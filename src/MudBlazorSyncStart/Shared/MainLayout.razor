@inherits LayoutComponentBase

@inject IThemeProvider provider

<MudThemeProvider @bind-IsDarkMode="@isDarkMode" Theme="MyTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />

        <MudToggleIconButton @bind-Toggled="@isDarkMode"
                             Icon="@Icons.Filled.BrightnessHigh" Color="Color.Inherit" Title="Light mode"
                             ToggledIcon="@Icons.Filled.BrightnessLow" ToggledColor="@Color.Inherit" ToggledTitle="Dark mode" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">MudBlazorSyncStart</MudText>
        </MudDrawerHeader>
        <MudContainer>
            <MudImage Src="images/logo.jpg" Elevation="25" Width="220" Class="rounded-lg" ObjectPosition="ObjectPosition.Center" />
        </MudContainer>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    public bool isDarkMode { get; set; }

    private MudTheme? MyTheme;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    protected override void OnInitialized()
    {
        MyTheme = provider.FirstTheme;
    }
}