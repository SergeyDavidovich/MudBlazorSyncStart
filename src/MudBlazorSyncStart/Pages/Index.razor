@page "/"

<PageTitle>Index</PageTitle>

<MudContainer>
    
    <MudPaper Elevation="2" Class="ma-2 pa-16" Outlined="false" Style="@($"color:{Theme.Palette.Dark};")">
        <MudText Typo="Typo.h3" GutterBottom="true">Hello, world!</MudText>
        <MudText Class="mb-8">Welcome to your new app</MudText>
    </MudPaper>

    <MudItem Class="pa-16 ma-2" Elevation="2">MudItem</MudItem>
    <MudCard>
        <MudCardContent>
            <MudText Color="Color.Surface">Story of the day</MudText>
            <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>
@code{
    private MudTheme Theme = new MudTheme();
    
    protected override void OnInitialized()
    {
        Theme.Palette.Dark = Colors.Red.Default;
        
        Theme.PaletteDark.Dark = Colors.LightBlue.Default;
    }
}
